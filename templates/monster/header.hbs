<header class="sheet-header">
   <img class="profile-img" src="{{actor.img}}" data-edit="img" data-action="editImage" data-tooltip="{{actor.name}}" height="100" width="100" />
   <div class="header-fields">
      <ul class="summary flexrow">
         <li>
            <div class="charname">
               <input name="name" class="charname" type="text" value="{{actor.name}}" placeholder="Name" data-tooltip="{{actor.name}}" />
               <label>{{localize 'Name'}}</label>
            </div>
         </li>
         <li style="max-width:100px;">
            <input type="text" name="system.details.alignment" value="{{system.details.alignment}}" data-dtype="String" />
            <label>{{localize 'FADE.Actor.Alignment'}}</label>
         </li>
         <li style="max-width:94px;">
            <select style="max-width:90px;" name="system.details.size" data-tooltip="{{localize (concat 'FADE.Actor.sizes.' system.details.size 'Hint')}}">
               {{selectOptions sizes selected=system.details.size}}
            </select>
            <label for="system.details.size">{{localize 'FADE.Size'}}</label>
         </li>
      </ul>
      <ul class="summary flexrow">
         <li style="max-width:65px">
            <input class="hitdie" name="system.hp.hd" type="text" value="{{system.hp.hd}}" data-dtype="String" data-tooltip="{{localize 'FADE.Actor.HitDice'}}" />
            <label class="hitdie rollable2"
                   data-action="rollGeneric"
                   data-formula="{{formatHitDice system.hp.hd}}"
                   data-rollmode="blindroll"
                   data-label="{{localize 'FADE.Actor.Health'}}">
               {{localize 'FADE.Actor.HitDiceShort'}}
            </label>
         </li>
         <li class="flex2" style="max-width:65px">
            <input type="text" name="system.na.wandering" value="{{system.na.wandering}}" data-dtype="String" data-tooltip="{{localize 'FADE.Actor.NumberAppearing.long'}}" />
            <label class="rollable2"
                   data-action="rollGeneric"
                   data-formula="{{system.na.wandering}}"
                   data-label="{{localize 'FADE.Actor.NumberAppearing.long'}}"
                   data-rollmode="blindroll"
                   data-tooltip="{{localize 'FADE.Actor.NumberAppearing.long'}}">{{localize 'FADE.Actor.NumberAppearing.short'}}</label>
         </li>
         <li class="flex1">
            <input type="text" name="system.details.xpAward" value="{{system.details.xpAward}}" data-dtype="String" />
            <label>{{localize 'FADE.Actor.XPAward'}}</label>
         </li>
         <li class="flex1" style="max-width:35px">
            <label>{{localize "FADE.Actor.THAC0"}}</label>
            <input type="text" name="system.thac0.value" value="{{@root.system.thac0.value}}" data-dtype="Number" />
         </li>
         <li class="flex1" style="max-width:35px">
            <label>{{localize "FADE.Actor.THBonus"}}</label>
            <input type="text" name="system.thbonus" value="{{@root.system.thbonus}}" data-dtype="Number" readonly />
         </li>
         <li class="flex2">
            <input type="text" name="system.details.monsterType" value="{{system.details.monsterType}}" data-dtype="String" data-tooltip="{{system.details.monsterType}}" />
            <label>{{localize 'Type'}}</label>
         </li>
      </ul>
   </div>
</header>